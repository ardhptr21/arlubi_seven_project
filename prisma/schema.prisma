generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  nis      Int     @unique
  class    String
  image    String?
  password String

  @@map("users")
}

model Extracurricular {
  id           String   @id @default(cuid())
  name         String
  short        String
  long         String
  slug         String   @unique
  header_image String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("extracurriculars")
}
